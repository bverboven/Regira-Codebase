<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFrameworks>netstandard2.0;net8.0;net9.0;net10.0</TargetFrameworks>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <LangVersion>latest</LangVersion>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Authors>B.Verboven</Authors>
    <RootNamespace>Regira.Web.HTML.RazorLight</RootNamespace>
    <PackageId>Regira.Web.HTML.RazorLight</PackageId>
    <AssemblyName>Regira.Web.HTML.RazorLight</AssemblyName>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <NoWarn>1701;1702;1591</NoWarn>
    <Version>5.0.1</Version>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="RazorLight" Version="2.3.1" />
    <!-- Upgraded for vulnerabilities -->
    <PackageReference Include="Microsoft.Extensions.Caching.Memory" Version="10.0.1" />
    <PackageReference Include="System.Text.RegularExpressions" Version="4.3.1" />
  </ItemGroup>
  <ItemGroup Condition="$(TargetFramework) == 'netstandard2.0'">
    <!-- Upgraded for vulnerabilities -->
  </ItemGroup>
  <ItemGroup>
    <ProjectReference Include="..\Common.Web\Common.Web.csproj" />
  </ItemGroup>
</Project>